<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Header with logo and profile icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/overviewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Overview"
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Dnyaneshwar"
                    android:textSize="20sp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_stats"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Health Analytics and Vital Signs Side by Side -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:weightSum="2">

                <!-- Health Analytics Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Analytics"
                        android:textColor="#295B75"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="12dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sugargraph"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sugar Levels :"
                        android:textColor="#295B75"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Vital Signs Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vital Signs"
                        android:textColor="#295B75"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="❤️ Heart Rate      72 bpm"
                            android:textColor="#222"
                            android:textSize="14sp"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔵 Oxygen Level   98%"
                            android:textColor="#222"
                            android:textSize="14sp"
                            android:paddingBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌡️ Body Temp      96.8°F"
                            android:textColor="#222"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Large Alerts Section -->
            <!-- Large Alerts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:elevation="2dp"
                android:minHeight="200dp">

                <!-- Alerts Header with Interactive Emergency Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/content_padding"
                    android:paddingBottom="@dimen/small_padding"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alerts"
                        android:textStyle="bold"
                        android:textSize="@dimen/section_title_size"
                        android:textColor="@color/text_primary" />

                    <!-- Interactive Circular Emergency Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#D32F2F"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/circularEmergencyButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_phone"
                            app:tint="#FFFFFF"
                            android:scaleType="center"
                            android:padding="12dp"
                            android:contentDescription="Emergency Call Button"
                            android:layout_gravity="center" />

                        <!-- Pulse Animation Ring -->
                        <View
                            android:id="@+id/pulseRing"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/pulse_ring"
                            android:alpha="0"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Interactive Alerts Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/content_padding"
                    android:paddingRight="@dimen/content_padding"
                    android:paddingBottom="@dimen/content_padding"
                    android:layout_weight="1">

                    <!-- Interactive Alert Item 1 -->
                    <LinearLayout
                        android:id="@+id/alertItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/small_padding"
                        android:paddingHorizontal="@dimen/small_padding"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="@dimen/small_padding"
                            android:src="@drawable/greendot"
                            android:scaleType="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lab Report uploaded by Dr. Sharma"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/body_text_size"
                            android:lineSpacingExtra="2dp" />

                        <!-- Time Indicator -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h ago"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Interactive Alert Item 2 -->
                    <LinearLayout
                        android:id="@+id/alertItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/small_padding"
                        android:paddingHorizontal="@dimen/small_padding"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="@dimen/small_padding"
                            android:src="@drawable/greendot"
                            android:scaleType="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Appointment confirmed for tomorrow"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/body_text_size"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h ago"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Interactive Alert Item 3 -->
                    <LinearLayout
                        android:id="@+id/alertItem3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/small_padding"
                        android:paddingHorizontal="@dimen/small_padding"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="@dimen/small_padding"
                            android:src="@drawable/greendot"
                            android:scaleType="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Prescription refill reminder"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/body_text_size"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3h ago"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Interactive Alert Item 4 -->
                    <LinearLayout
                        android:id="@+id/alertItem4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/small_padding"
                        android:paddingHorizontal="@dimen/small_padding"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginVertical="2dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginEnd="@dimen/small_padding"
                            android:src="@drawable/greendot"
                            android:scaleType="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Monthly health checkup due"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/body_text_size"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 day"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Expandable Section for More Alerts -->
                    <LinearLayout
                        android:id="@+id/moreAlertsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:animateLayoutChanges="true">

                        <!-- Additional Alert Item 5 -->
                        <LinearLayout
                            android:id="@+id/alertItem5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/small_padding"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginVertical="2dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="@dimen/small_padding"
                                android:src="@drawable/greendot" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Blood pressure check reminder"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/body_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 days"
                                android:textColor="#999"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Additional Alert Item 6 -->
                        <LinearLayout
                            android:id="@+id/alertItem6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/small_padding"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginVertical="2dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="@dimen/small_padding"
                                android:src="@drawable/greendot" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Medication schedule updated"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/body_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 days"
                                android:textColor="#999"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Additional Alert Item 7 -->
                        <LinearLayout
                            android:id="@+id/alertItem7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/small_padding"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginVertical="2dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="@dimen/small_padding"
                                android:src="@drawable/greendot" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Exercise routine reminder"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/body_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 week"
                                android:textColor="#999"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Additional Alert Items can go here -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="@dimen/small_padding"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="@dimen/small_padding"
                                android:src="@drawable/greendot" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Blood pressure check reminder"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/body_text_size" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 days"
                                android:textColor="#999"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Show More/Less Button -->
                    <LinearLayout
                        android:id="@+id/showMoreButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingVertical="@dimen/small_padding"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/showMoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show More Alerts"
                            android:textColor="#295B75"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:drawableEnd="@drawable/ic_expand_more"
                            android:drawablePadding="4dp" />
                    </LinearLayout>

                    <!-- Extra flexible space -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="20dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- Emergency Button -->
            <Button
                android:id="@+id/buttonEmergency"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#295B75"
                android:text="Emergency"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:gravity="center"
                app:cornerRadius="26dp"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>


    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#295B75"
        android:weightSum="4"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Overview Tab -->
        <LinearLayout
            android:id="@+id/menuOverview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_overview"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Overview"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuAppointments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_appointments"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_history"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_wallet"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
