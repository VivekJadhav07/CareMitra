<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- SwipeRefreshLayout wrapping all content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Main Content (your existing layout) -->
            <ScrollView
                android:id="@+id/mainContentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                android:visibility="gone">

                <!-- Your existing LinearLayout content here -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/overviewTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overview"
                            android:textColor="#222"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/logo"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/profileIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/profile"
                            android:scaleType="fitCenter" />
                    </LinearLayout>

                    <!-- Welcome Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Welcome, Dnyaneshwar"
                            android:textSize="20sp"
                            android:textColor="#222"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/networkStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Connected"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>

                    <!-- Health Cards -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:weightSum="2">

                        <!-- Health Analytics Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health Analytics"
                                android:textColor="#295B75"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingBottom="12dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sugargraph"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/sugarLevels"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sugar Levels :"
                                android:textColor="#295B75"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Vital Signs Card -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_marginStart="6dp"
                            android:elevation="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vital Signs"
                                android:textColor="#295B75"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingBottom="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/heartRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="❤️ Heart Rate      72 bpm"
                                    android:textColor="#222"
                                    android:textSize="14sp"
                                    android:paddingBottom="8dp"/>

                                <TextView
                                    android:id="@+id/oxygenLevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🔵 Oxygen Level   98%"
                                    android:textColor="#222"
                                    android:textSize="14sp"
                                    android:paddingBottom="8dp"/>

                                <TextView
                                    android:id="@+id/bodyTemp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌡️ Body Temp      96.8°F"
                                    android:textColor="#222"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Alerts Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:layout_margin="12dp"
                        android:elevation="2dp"
                        android:minHeight="200dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Alerts"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#222" />

                            <ImageView
                                android:id="@+id/circularEmergencyButton"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_phone"
                                android:background="#D32F2F"
                                android:scaleType="center"
                                android:padding="12dp"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/alertsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp" />
                    </LinearLayout>

                    <!-- Emergency Button -->
                    <Button
                        android:id="@+id/buttonEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#295B75"
                        android:text="Emergency"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="8dp"
                        android:gravity="center"
                        app:cornerRadius="26dp"
                        android:elevation="4dp" />

                </LinearLayout>
            </ScrollView>

            <!-- No Internet Layout -->
            <LinearLayout
                android:id="@+id/noInternetLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="#F8F8F8"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/noInternetImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/no_internet2"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Internet access"
                    android:textSize="24sp"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check your connection settings\nand try again"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:textAlignment="center"
                    android:layout_marginBottom="32dp" />

                <Button
                    android:id="@+id/retryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retry"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4285F4"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="12dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Loading Layout -->
            <LinearLayout
                android:id="@+id/loadingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:visibility="visible">

                <!-- Header Skeleton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:background="#E0E0E0" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#E0E0E0" />
                </LinearLayout>

                <!-- Welcome Section Skeleton -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="1dp">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="24dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:background="#E0E0E0" />
                </LinearLayout>

                <!-- Cards Skeleton -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginEnd="6dp"
                        android:elevation="2dp">

                        <View
                            android:layout_width="100dp"
                            android:layout_height="16dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="14dp"
                            android:background="#E0E0E0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginStart="6dp"
                        android:elevation="2dp">

                        <View
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="120dp"
                            android:layout_height="14dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="14dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="8dp" />

                        <View
                            android:layout_width="110dp"
                            android:layout_height="14dp"
                            android:background="#E0E0E0" />
                    </LinearLayout>
                </LinearLayout>

                <!-- More skeleton items... -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    android:elevation="2dp"
                    android:padding="16dp">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="18dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="200dp"
                        android:layout_height="16dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:background="#E0E0E0" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#295B75"
        android:weightSum="4"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menuOverview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_overview"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Overview"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuAppointments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_appointments"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_history"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_wallet"
                app:tint="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
